%ul.nav.nav-tabs
  %li.active=link_to tag_icon(:list, pat(:list)), url(:authors, :index)
  %li=link_to tag_icon(:plus, pat(:new)), url(:authors, :new)

.tabs-content
  %table#list.table.table-striped.table-hover.table-condensed
    %thead
      %tr
        %th.header.list-menu
          .dropdown
            %a.list-menu-toggle.dropdown-toggle{:href => '#', :'data-toggle' => :dropdown}
              =tag_icon :magic
              %span.caret
            %ul.list-menu.dropdown-menu{:role => :menu}
              %li.list-menu-wrapper=link_to tag_icon(:check, pat(:select_all)), '#', :id => 'select-all', :class => 'list-menu-link'
              %li.list-menu-wrapper.list-menu-wrapper-disabled
                =link_to tag_icon(:'check-empty', pat(:deselect_all)), '#', :id => 'deselect-all', :class => 'list-menu-link list-menu-link-disabled'
              %li.list-menu-divider.divider
              %li.list-menu-wrapper.list-menu-wrapper-disabled
                =link_to tag_icon(:trash, pat(:delete_selected)), '#', :id => 'delete-selected', :class => 'list-menu-link list-menu-link-disabled'
                .list-menu-popover-delete-selected.popover.right
                  .arrow
                  %h3.popover-title=pat(:delete_selected_title)
                  .popover-content
                    -form_tag url(:authors, :destroy_many), :method => :delete do
                      =hidden_field_tag :author_ids, :'data-delete-many-ids' => true
                      =submit_tag pat(:delete), :class =>'list-menu-popover-delete-selected-btn btn btn-danger btn-small'
                      .btn.btn-small.cancel=pat(:cancel)
        %th.header= mat(:author, :id)
        %th.header= mat(:author, :name)
        %th.header= mat(:author, :email)
        %th.header= mat(:author, :kind)
        %th.header= mat(:author, :created_at)
        %th.header= mat(:author, :updated_at)
        %th.header= mat(:author, :drupal_uid)
        %th.header.list-row-action-header

    %tbody
      -@authors.each do |author|
        %tr.list-row
          %td.list-column.list-selectable
            =check_box_tag 'author_ids[]', :value => author.id, :class => 'list-selectable-checkbox'
          %td.list-column=author.id
          %td.list-column=author.name
          %td.list-column=author.email
          %td.list-column=author.kind
          %td.list-column=time_ago_in_words author.created_at
          %td.list-column=time_ago_in_words author.updated_at
          %td.list-column=author.drupal_uid
          %td.list-column.list-row-action
            .list-row-action-wrapper
              =link_to tag_icon(:edit), :href => url(:authors, :edit, :id => author.id), :rel => :tooltip, :title => "#{pat(:edit)} author", :class => 'list-row-action-wrapper-link'
              =link_to tag_icon(:trash), :rel => :tooltip, :title => "#{pat(:delete)} author", :class => 'list-row-action-delete-one list-row-action-wrapper-link'
              .popover.list-row-action-popover-delete-one.left
                .arrow
                %h3.popover-title=pat(:delete, :model => "author")
                .popover-content
                  -form_tag url(:authors, :destroy, :id => author.id), :method => :delete do
                    =submit_tag pat(:delete), :class =>'list-row-action-popover-delete-one-btn btn btn-danger btn-small'
                    .btn.btn-small.cancel=pat(:cancel)
